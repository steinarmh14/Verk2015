@model List<FeedIt.Models.Post>
@{
    ViewBag.Title = "Front Page";
}

<!DOCTYPE html>
<html>
<head><title>Feedit</title>
    </head>
<div class="wholepage">
    <div class="bodydiv">
        <body>
            <h2>News Feed</h2>
            <div>  
                <form action="" method="post">
                <input type="file" name="file">
                    <textarea rows="5" cols="20" placeholder="Description/recipe">
                    </textarea>
                <input type="button" class="createpost" value="Post" />
                </form>
            </div>
            <div class="posts">
                @if(Model != null)
                { 
              foreach (var item in Model)
              {
                <div>
                    <a class="postpic" href="@Url.Action("Index", "Post", new { id = item.ID})">
                        <img src="@Url.Content(item.picture)" alt="picture" style="width:100px; height:100px;"/>                     
                    </a>
                </div>
                <div>
                    <p>@Html.Display(item.about)</p>
                </div>
                  
                  
              }
                }
            </div>
        </body>

    </div>

</div>
</html>