@using Microsoft.AspNet.Identity
@model FeedIt.Models.ManageUserViewModel
          
@{
    ViewBag.Title = "CreateGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateGroupView</h2>

@using (Html.BeginForm("Create", "Group", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h3>Create Group</h3>
    <hr />
    
    <div class="form-group">
        <div>
            <p class="col-md-offset-1 col-md-1">Name</p>
            <div class="col-md-10">
                <input type="text" id="groupName" name="groupName"/>
            </div>
        </div>
    </div>
    <div class="form-group" >
        <div>
            <p class="col-md-offset-1 col-md-1">About group</p>
            <div class="col-md-10">
                <textarea cols="45" rows="6" placeholder="About group..." id="aboutGroup" name="aboutGroup"></textarea>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <label class="col-md-offset-1 col-md-1">Group picture</label>
            <div class="col-md-10">
                <input type="text" id="groupPicture" name="groupPicture"/>
                <div class="col-md-offset-6">
                    <input type="button" value="Cancel" class="btn btn-default" />
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}