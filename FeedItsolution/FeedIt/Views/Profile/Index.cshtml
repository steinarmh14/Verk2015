@model FeedIt.Models.ProfileViewModel
@{
    ViewBag.Title = "Index";
}


<body style="background-color:#EEE">
    <h2 style="background-color:#EEE" class="newsfeed">@Model.user.fullName</h2>
    <div class="navleftmyprofile">
        <div>
            <img src="@Url.Content(Model.user.profilePicture)" alt="picture" class="groupprofilepicture" />
        </div>
        <div class="groupabout">
            <p>@Model.user.aboutMe</p>
            <div class="navrightfollowers">
                <button id="followersbutton" class="followermargin btn btn-default">Followers</button>
                <button id="followingbutton" class="btn btn-default">Following</button>
                <div id="followers" class="hidden">
                    <p class="followermargin">Followers:</p>
                    @Html.Partial("FollowerFollowing", Model.followers)
                </div>
                <div id="followings" class="hidden">
                    <p class="followermargin">Following:</p>
                    @Html.Partial("FollowerFollowing", Model.followings)
                </div>
            </div>
        </div>
    </div>
    <div>
        @Html.Partial("ProfileFeed", Model.feed)
    </div>
</body>