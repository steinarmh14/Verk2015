@using Microsoft.AspNet.Identity
@model FeedIt.Models.ManageUserViewModel

<p>You're logged in as <strong>@User.Identity.GetUserName()</strong></p>
<hr />

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h3><strong>Edit Profile</strong></h3>
    <hr />

    <div class="form-group">
        <div>
            <p class="col-md-offset-1 col-md-1">About Me</p>
            <div class="col-md-10">
                <textarea cols="45" rows="6" placeholder="About me..."></textarea>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <p class="col-md-offset-1 col-md-1">Profile Pic</p>
            <div class="col-md-10">
                <form action="upload-script-url" method="post" enctype="multipart/form-data">
                    <input type="file" name="file">
                </form>
            </div>
        </div>
    </div>
    <hr />
}


@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3><strong>Change Password</strong></h3>
    <hr />
    
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-8">
            <input type="button" value="Delete Profile" onclick="location.href = 'Login';" class="btn btn-default" />
            <input type="submit" value="Save Changes" class="btn btn-default" />
        </div>
    </div>
}
    
